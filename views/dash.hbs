<div class="w-full h-full">
    <hr class="w-full h-px bg-gray-100 opacity-20">
    <div class="w-3/4 mx-auto text-center flex flex-col p-8 gap-4">
        <h2 class="text-6xl tracking-widest text-cyan-400">{{ user.name }}</h2>
        <h2 class="text-4xl tracking-wider text-cyan-400 pb-8">Dashboard</h2>
        <div class="flex justify-end px-8 pb-4">
            <button type="button" id="newPost" class="p-3 mt-5 bg-cyan-600 text-xl text-white rounded-lg hover:scale-110">New Post</button>
        </div>
        <hr class="w-full h-px bg-gray-100 opacity-20">
    </div>
    <div class="w-3/4 mx-auto">
        {{#each posts as |post|}}
        <div class="w-full flex flex-col p-4">
            <div class="flex flex-row justify-between">
                <div>
                    <h1 class="py-4 px-8 text-4xl tracking-wider text-cyan-400 font-medium">{{ title }}</h1>
                </div>
                <div class="flex flex-row justify-center items-center gap-4 px-8">
                    <button id="{{ id }}" class="bg-green-400 rounded-lg p-1 hover:scale-110 cursor-pointer" onclick="editPost(this.id)">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L6.832 19.82a4.5 4.5 0 01-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 011.13-1.897L16.863 4.487zm0 0L19.5 7.125" />
                        </svg>
                    </button>
                    <button id="{{ id }}" class="bg-red-400 rounded-lg p-1 hover:scale-110 cursor-pointer" onclick="deletePost(this.id)">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                        </svg>
                    </button>
                </div>
            </div>
            <p class="pb-8 px-8 text-lg tracking-wide text-gray-400">{{ text }}</p>
            <hr class="w-full h-px bg-gray-100 opacity-20">
        </div>
        {{/each}}
    </div>
</div>

<script src="/js/dash.js"></script>