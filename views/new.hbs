<div class="w-full h-full">
    <hr class="w-full h-px bg-gray-100 opacity-20">
    <div class="w-3/4 mx-auto text-center flex flex-col p-8 gap-4">
        <h2 class="text-6xl text-cyan-400 font-bold tracking-widest">{{ user.name }}</h2>
        <h2 class="text-4xl text-cyan-400 font-bold tracking-wider p-4">Dashboard</h2>
        <h3 class="text-2xl text-cyan-400 font-medium tracking-wider pb-8">Creating a New Post</h3>
        <hr class="w-full h-px bg-gray-100 opacity-20">
    </div>
    <div class="postForm w-full mx-auto">
        <form id="newPost" class="w-3/4 mx-auto flex flex-col justify-center items-center my-8 gap-8">
            <div class="w-3/4 flex flex-col">
                <label class="block mb-4 text-2xl font-medium tracking-wider text-cyan-400">Title:</label>
                <input id="new-title" type="text" class="text-lg block w-full p-3 rounded-lg bg-gray-200 border border-transparent focus:outline-none" value="{{post.title}}" required/>
            </div>
            <div class="w-3/4 flex flex-col">
                <label class="block mb-4 text-2xl font-medium tracking-wider text-cyan-400">Text:</label>
                <textarea id="new-text" class="text-lg block w-full h-auto p-3 rounded-lg bg-gray-200 border border-transparent focus:outline-none" rows="25" required>{{post.text}}</textarea>
            </div>
            <div class="w-3/4 flex justify-end px-8 gap-4">
                <button type="button" id="cancel" class="text-xl font-medium bg-red-400 rounded-lg p-2 hover:scale-110 cursor-pointer">Cancel</button>
                <button type="submit" class="text-xl font-medium bg-green-400 rounded-lg p-2 hover:scale-110 cursor-pointer">Submit</button>
            </div>
        </form>
    </div>
</div>

<script src="/js/new.js"></script>